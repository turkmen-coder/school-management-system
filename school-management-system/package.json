{
  "name": "school-management-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*",
    "infra/*"
  ],
  "scripts": {
    "dev": "turbo run dev --concurrency=15",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "jest --testPathPattern=e2e-spec.ts",
    "test:unit": "jest --testPathIgnorePatterns=e2e-spec.ts",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:dev": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "prisma:generate": "pnpm --filter @school/persistence prisma:generate",
    "prisma:migrate": "pnpm --filter @school/persistence prisma:migrate",
    "prisma:seed": "turbo run prisma:seed",
    "setup": "powershell -ExecutionPolicy Bypass -File setup.ps1",
    "setup:unix": "bash setup.sh",
    "start:services": "docker compose up -d && pnpm dev",
    "stop:services": "docker compose down"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "prettier": "^3.1.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.14.0"
}